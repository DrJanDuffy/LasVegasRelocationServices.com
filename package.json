{
  "name": "las-vegas-relocation-services",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "analyze": "cross-env ANALYZE=true next build",
    "deploy": "powershell -ExecutionPolicy Bypass -File deploy.ps1",
    "deploy:simple": "deploy.bat",
    "deploy:cloudflare": "powershell -ExecutionPolicy Bypass -File deploy-cloudflare.ps1",
    "setup:cloudflare": "powershell -ExecutionPolicy Bypass -File setup-cloudflare.ps1",

    "biome:check": "biome check .",
    "biome:format": "biome format --write .",
    "biome:lint": "biome lint .",
    "biome:fix": "biome check --write .",
    "biome:check:strict": "biome check . --max-diagnostics=200",
    "biome:fix:strict": "biome check --write . --max-diagnostics=200",
    "biome:organize": "biome check --write --apply-unsafe .",
    "biome:ci": "biome check . --max-diagnostics=0",
    "biome:format:check": "biome format --check .",
    "biome:organize:check": "biome check --apply-unsafe .",

    "code:quality": "npm run biome:check && npm run type-check",
    "code:quality:fix": "npm run biome:fix && npm run type-check",
    "code:quality:strict": "npm run biome:check:strict && npm run type-check",
    "code:quality:strict:fix": "npm run biome:fix:strict && npm run type-check",

    "pre-commit": "npm run biome:check && npm run type-check",
    "pre-push": "npm run biome:ci && npm run type-check",

    "real-estate:quality": "npm run code:quality && npm run accessibility:check",
    "accessibility:check": "biome check . --apply-unsafe --max-diagnostics=500"
  },
  "dependencies": {
    "@headlessui/react": "^2.0.0",
    "@heroicons/react": "^2.1.1",
    "@microsoft/clarity": "^1.0.0",
    "clsx": "^2.1.1",
    "framer-motion": "^11.0.8",
    "lucide-react": "^0.344.0",
    "next": "14.2.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.2.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@next/bundle-analyzer": "^14.2.5",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "autoprefixer": "^10.4.19",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.5",
    "postcss": "^8.4.38",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.5.12",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.6.3"
  }
}
