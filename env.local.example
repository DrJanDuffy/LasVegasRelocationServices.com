# =============================================================================
# Cloudflare Configuration
# =============================================================================

# Cloudflare API Credentials
# Get these from your Cloudflare dashboard: https://dash.cloudflare.com/
NEXT_PUBLIC_CLOUDFLARE_ZONE_ID=48655987a584eb3068e3820930b6cd91
NEXT_PUBLIC_CLOUDFLARE_ACCOUNT_ID=2cc579c1ec9e426ed585e933ebf4753b
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token-here

# Cloudflare Features (set to true to enable)
NEXT_PUBLIC_ENABLE_CLOUDFLARE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_CLOUDFLARE_SPEED_INSIGHTS=true
NEXT_PUBLIC_ENABLE_CLOUDFLARE_WEB_VITALS=true
NEXT_PUBLIC_ENABLE_HSTS=true
NEXT_PUBLIC_ENABLE_CSP=true
NEXT_PUBLIC_ENABLE_REFERRER_POLICY=true
NEXT_PUBLIC_ENABLE_CLOUDFLARE_IMAGES=true
NEXT_PUBLIC_WORKER_ENABLED=true
NEXT_PUBLIC_WORKER_ENVIRONMENT=production
NEXT_PUBLIC_ENABLE_EDGE_CACHING=true
NEXT_PUBLIC_ENABLE_EDGE_COMPUTING=true

# Cache TTL Settings (in seconds)
NEXT_PUBLIC_STATIC_CACHE_TTL=31536000  # 1 year
NEXT_PUBLIC_PAGE_CACHE_TTL=3600        # 1 hour
NEXT_PUBLIC_API_CACHE_TTL=300          # 5 minutes

# =============================================================================
# Quick Cloudflare Setup Steps:
# =============================================================================
# 1. Go to https://dash.cloudflare.com/
# 2. Add your domain: lasvegasrelocationservices.com
# 3. Update nameservers to point to Cloudflare
# 4. Go to API Tokens → Create Token
# 5. Use "Edit zone settings" template
# 6. Copy the API token to CLOUDFLARE_API_TOKEN above
# 7. Enable these features in Cloudflare dashboard:
#    - Auto Minify (HTML, CSS, JS)
#    - Brotli compression
#    - Early Hints
#    - Rocket Loader
#    - HSTS
#    - WAF (Web Application Firewall)
# 8. Deploy with: npm run deploy:cloudflare
